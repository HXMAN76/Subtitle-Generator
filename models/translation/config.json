{
  "model": {
    "vocab_size": 32000,
    "d_model": 64,
    "n_heads": 2,
    "d_ff": 256,
    "n_encoder_layers": 2,
    "n_decoder_layers": 2,
    "dropout": 0.1,
    "attention_dropout": 0.1,
    "max_seq_len": 64,
    "pad_id": 0,
    "unk_id": 1,
    "bos_id": 2,
    "eos_id": 3,
    "tie_embeddings": true
  },
  "training": {
    "batch_size": 8,
    "gradient_accumulation_steps": 2,
    "learning_rate": 0.0001,
    "warmup_steps": 100,
    "adam_beta1": 0.9,
    "adam_beta2": 0.98,
    "adam_epsilon": 1e-09,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "max_epochs": 3,
    "max_steps": null,
    "label_smoothing": 0.1,
    "save_every_n_steps": 5000,
    "validate_every_n_steps": 1000,
    "patience": 5,
    "min_delta": 0.001,
    "use_amp": false,
    "seed": 42
  },
  "tokenizer": {
    "vocab_size": 32000,
    "model_type": "bpe",
    "character_coverage": 0.9995,
    "pad_token": "<pad>",
    "unk_token": "<unk>",
    "bos_token": "<bos>",
    "eos_token": "<eos>",
    "language_tags": [
      "<en>",
      "<hi>"
    ],
    "model_prefix": "models/translation/nmt_spm",
    "corpus_path": "data/raw/spm_corpus.txt"
  },
  "data_dir": "data",
  "model_dir": "models/translation",
  "output_dir": "output",
  "source_lang": "en",
  "target_lang": "hi"
}